<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- TextView Nama Mahasiwa -->
            <TextView
                android:id="@+id/tv_id_presensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="001" />

            <!-- TextView Nama Mahasiwa -->
            <TextView
                android:id="@+id/tv_matakuliah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Dasar Pemrograman" />

            <!-- TextView Npm Mahasiswa -->
            <TextView
                android:id="@+id/tv_pertemuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Pertemuan 2" />

            <!-- TextView NoHp Mahasiswa -->
            <TextView
                android:id="@+id/tv_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Kelas A" />

            <TextView
                android:id="@+id/tv_ruangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="FST 301" />

            <TextView
                android:id="@+id/tv_waktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="19 Jul 2018 08:36:56" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_jlhadir"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_hadir"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_vertical_margin"
                        android:textColor="@color/colorPrimary"
                        tools:text="@string/hadir" />


                    <TextView
                        android:id="@+id/tv_jltdkhadir"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_tidak_hadir"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorAccent"
                        tools:text="@string/tidak_hadir" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end">


                    <Button

                        android:id="@+id/bt_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorAccent"
                        android:drawableLeft="@drawable/ic_eye"
                        android:drawableTint="@color/textColorPrimary"
                        android:paddingLeft="5dp"
                        android:text="@string/detail"
                        android:textColor="@color/textColorWhite" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>