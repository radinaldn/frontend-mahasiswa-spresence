<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        xmlns:app="http://schemas.android.com/tools"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_foto"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- TextView Nama Mahasiwa -->
            <!-- TextView Npm Mahasiswa -->
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tv_nama_dosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazruddin Safaat"
                />

            <!-- TextView Nama Mahasiwa -->
            <TextView
                android:id="@+id/tv_nip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130517xxx" />

            <!-- TextView NoHp Mahasiswa -->
            <TextView
                android:textColor="@color/textColorWhite"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/tv_status_kehadiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadir"
                />

            <TextView
                android:gravity="center"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:visibility="gone"
                android:id="@+id/tv_nama_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kota" />


            <TextView
                android:layout_gravity="end"
                android:id="@+id/tv_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Menit Lalu" />


        </LinearLayout>





    </LinearLayout>



</android.support.v7.widget.CardView>